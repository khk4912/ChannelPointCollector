{
    "manifest_version": 2,
    "name": "ChannelPointCollector",
    "description": "Automatically collects Twitch channel points.",
    "version": "0.1",
    "browser_action": {
        "default_popup": "popup/popup.html",
        "default_title": "ChannelPointCollector"
    },
    "permissions": [
        "tabs",
        "storage",
        "https://www.twitch.tv/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "icons": {
        "128": "128x128.png",
        "48": "48x48.png",
        "16": "16x16.png"
    }
}